<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:gravity="left|top"
        android:layout_marginTop="10dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_your_bio"
            android:textSize="25sp" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_name" />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:hint="@string/first_name"
                android:ems="13"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_name" />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="73dp"
                android:hint="@string/last_name"
                android:ems="13"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/school" />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="98dp"
                android:hint="@string/school"
                android:ems="13"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year_of_graduation" />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:hint="@string/year_of_graduation"
                android:ems="13"/>

        <CheckBox
                android:text="CheckBox"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/degree"
                android:layout_marginTop="13dp"/>

        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/radiogroup">

            <RadioGroup
                    android:id="@+id/radiogroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                <RadioButton
                        android:id="@+id/bs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/b_s"
                        android:layout_marginStart="20dp"
                        android:onClick="checkMajor"/>
                <RadioButton
                        android:id="@+id/ms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/m_s"
                        android:layout_marginStart="20dp"/>
                <RadioButton
                        android:id="@+id/phd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ph_d"
                        android:layout_marginStart="20dp"/>
            </RadioGroup>


            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                <RadioButton
                        android:id="@+id/bas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bas"
                        android:layout_marginStart="20dp"/>
                <RadioButton
                        android:id="@+id/ma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/m_a"
                        android:layout_marginStart="20dp"/>
                <RadioButton
                        android:id="@+id/md"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/m_d"
                        android:layout_marginStart="20dp"/>
            </RadioGroup>

            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                <RadioButton
                        android:id="@+id/ba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ba"
                        android:layout_marginStart="20dp"/>
                <RadioButton
                        android:id="@+id/mfa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mfa"
                        android:layout_marginStart="20dp"/>
                <RadioButton
                        android:id="@+id/dds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dds"
                        android:layout_marginStart="20dp"/>
            </RadioGroup>

            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                <RadioButton
                        android:id="@+id/bfa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bfa"
                        android:layout_marginStart="20dp"/>
                <RadioButton
                        android:id="@+id/mba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mba"
                        android:layout_marginStart="20dp"/>
                <RadioButton
                        android:id="@+id/jd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/j_d"
                        android:layout_marginStart="20dp"/>
            </RadioGroup>

        </RadioGroup>

    </LinearLayout>
    <!--SPINNER STUFF-->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/major" />


        <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:ems="13"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favourite_activities" />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:hint="@string/favourite_activities"
                android:ems="13"/>

    </LinearLayout>

    <Button
            android:id="@+id/create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/create" />

</LinearLayout>
